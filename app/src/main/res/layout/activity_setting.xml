<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:szzgkon="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        style="@style/TitleStyle"
        android:text="设置中心" />

    <com.szzgkon.mobilesafe.view.SettingItemView
        android:id="@+id/siv_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        szzgkon:cTitle="自动更新设置"
        szzgkon:desc_on="自动更新已开启"
        szzgkon:desc_off="自动更新已关闭" />
    <com.szzgkon.mobilesafe.view.SettingItemView
        android:id="@+id/siv_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        szzgkon:cTitle="电话归属地显示设置"
        szzgkon:desc_on="归属地显示已经打开"
        szzgkon:desc_off="归属地显示已经关闭" />
    <com.szzgkon.mobilesafe.view.SettingClickView
        android:id="@+id/scv_address_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.szzgkon.mobilesafe.view.SettingClickView
        android:id="@+id/scv_address_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <com.szzgkon.mobilesafe.view.SettingItemView
        android:id="@+id/siv_callSafe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        szzgkon:cTitle="黑名单更新设置"
        szzgkon:desc_on="黑名单更新已开启"
        szzgkon:desc_off="黑名单更新已关闭" />


</LinearLayout>
